<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Scarnet1284662.MainPage">

    <!--Aprendemos a usar el grid y boxview -->
    <!--En este lo que hacemos es a grear columnas y poder darles formato -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <BoxView Color="Red"/>
        <BoxView Color="Lime" Grid.Column="1"/>
        <BoxView Color="Blue"  Grid.Row="1"/>
        <BoxView Color="Yellow" Grid.Row="1" Grid.Column="1"/>
    </Grid>
    

</ContentPage>
